@page
@inject IHtmlLocalizer<AppResources> T
@model RegisterModel
@{
    ViewData["Title"] = T["RegisterTitle"];
}

<h2>@ViewData["Title"]</h2>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>@T["RegisterSubtitle"]</h4>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="invalid-feedback"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback"></span>
    </div>

    <button type="submit" class="btn btn-primary">@T["RegisterButton"]</button>
</form>